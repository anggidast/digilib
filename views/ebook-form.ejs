<%- include('partials/head')  -%>

<body>
  <%- include('partials/nav')  -%>

  <% if(data) { %>
  <h1>Edit Book</h1>
  <% } else { %>
  <h1>Add Book</h1>
  <% } %>

  <form action="" method="post">
    <label for="title">Title:</label><br>
    <input required type="text" name="title" id="title" value="<%= data.title %>"> <br>
    <label for="author">Author:</label><br>
    <input required type="text" name="author" id="author" value="<%= data.author %>"><br>
    <label for="genre">Genre:</label><br>
    <input required type="text" name="genre" id="genre" value="<%= data.genre %>"><br>
    <label for="copies">Copies:</label><br>
    <input required type="number" name="copies" id="copies" value="<%= data.copies || 0 %>"><br><br>
    <button type="submit">Save</button>
  </form>
  <%- include('partials/footer')  -%>

</body>

</html>