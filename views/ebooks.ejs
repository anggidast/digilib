<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>E-Books</title>
</head>

<body>
  <%- include('partials/nav')  -%>

  <h1>E-Books List</h1>

  <form action="">
    <input type="text" name="search" placeholder="Search by title here!" />
    <button type="submit">Search</button>
  </form>
  <br />

  <table border="2">
    <tr>
      <th>No.</th>
      <th>Code</th>
      <th>Title</th>
      <th>Author</th>
      <th>Genre</th>
      <th>Copies</th>
      <th>Action</th>
    </tr>

    <% data.forEach((el, i) => { %>
    <tr>
      <td><%= i+1 %></td>
      <td><%= el.ebookId() %></td>
      <td><%= el.title %></td>
      <td><%= el.author %></td>
      <td><%= el.genre %></td>
      <td><%= el.copies %></td>
      <% if(session.role == 'admin') { %>
      <td>
        <a href="/ebooks/details/<%= el.id %>">See Borrower(s)</a> ||
        <a href="/ebooks/edit/<%= el.id %>">Edit</a> ||
        <a href="/ebooks/destroy/<%= el.id %>">Delete</a>
      </td>
      <% } else { %>
      <td>
        <a href="/ebooks/borrow/<%= el.id %>">Borrow this book</a>
      </td>
      <% } %>
    </tr>
    <% }) %>
  </table>

  <% if(session.role == 'admin') { %>
  <form action="/ebooks/add">
    <br />
    <button>Add Ebook</button>
  </form>
  <% } %>
</body>

</html>